<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <solid android:color="@color/success_status" />

            <padding android:bottom="5dp" android:left="7dp" android:right="7dp" android:top="5dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="@color/success_status_press" />

            <padding android:bottom="5dp" android:left="7dp" android:right="7dp" android:top="5dp" />

        </shape>
    </item>
</selector>