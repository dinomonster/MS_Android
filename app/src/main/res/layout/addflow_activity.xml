<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <include layout="@layout/toolbar_layout" />


    <View style="@style/line_style" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/sx_dp10"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sx_dp1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_title_tv"
                    style="@style/form_text_title_style"
                    android:text="*流程顺序" />

                <EditText
                    android:id="@+id/order_et"
                    style="@style/form_text_content_left_style"
                    android:inputType="number"
                    android:textColor="@color/content_text" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/noedetype_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/noedetype_title_tv"
                    style="@style/form_text_title_style"
                    android:layout_height="wrap_content"
                    android:text="*节点类型" />

                <TextView
                    android:id="@+id/noedetype_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/noedetype_arrow"
                    android:layout_width="@dimen/sx_dp18"
                    android:layout_height="@dimen/sx_dp18"
                    android:tint="@android:color/black"
                    app:srcCompat="@drawable/icon_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareguest_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shareguest_title_tv"
                    style="@style/form_text_title_style"
                    android:layout_height="wrap_content"
                    android:text="*分享嘉宾" />

                <TextView
                    android:id="@+id/shareguest_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/sx_dp18"
                    android:layout_height="@dimen/sx_dp18"
                    android:tint="@android:color/black"
                    app:srcCompat="@drawable/icon_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sharetitle_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sharetitle_title_tv"
                    style="@style/form_text_title_style"
                    android:text="*分享主题" />

                <EditText
                    android:id="@+id/sharetitle_et"
                    style="@style/form_text_content_left_style"
                    android:hint="例如：分析营销案例"
                    android:textColor="@color/content_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/starttime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/starttime_title_tv"
                    style="@style/form_text_title_style"
                    android:layout_height="wrap_content"
                    android:text="*开始时间" />

                <TextView
                    android:id="@+id/starttime_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/sx_dp18"
                    android:layout_height="@dimen/sx_dp18"
                    android:tint="@android:color/black"
                    app:srcCompat="@drawable/icon_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/endtime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/endtime_title_tv"
                    style="@style/form_text_title_style"
                    android:layout_height="wrap_content"
                    android:text="*结束时间" />

                <TextView
                    android:id="@+id/endtime_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/sx_dp18"
                    android:layout_height="@dimen/sx_dp18"
                    android:tint="@android:color/black"
                    app:srcCompat="@drawable/icon_arrow" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/action_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sx_dp50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_green_selector"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/save_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_red_selector"
            android:gravity="center"
            android:text="仅保存"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/saveandadd_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_green_selector"
            android:gravity="center"
            android:text="保存并继续添加"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.FitWindowsLinearLayout>