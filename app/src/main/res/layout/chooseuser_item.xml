<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="@dimen/sx_dp10">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/sx_dp40"
            android:layout_height="@dimen/sx_dp40"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/sx_dp10"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/title_text"
            android:textSize="@dimen/sx_sp14"
            tools:text="邓地" />

        <RadioButton
            android:id="@+id/checl_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:background="@drawable/radiobtn_select"
            android:checked="false"
            android:clickable="false"
            android:focusable="false" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/sx_dp15"
        android:layout_marginRight="@dimen/sx_dp15"
        android:background="@color/line" />
</LinearLayout>

