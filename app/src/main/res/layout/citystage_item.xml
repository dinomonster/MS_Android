<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/sx_dp10"
    android:layout_marginRight="@dimen/sx_dp10"
    android:layout_marginTop="@dimen/sx_dp10"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/sx_dp5"
    app:cardElevation="@dimen/sx_dp4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:layout_marginLeft="@dimen/sx_dp10"
                android:layout_marginRight="@dimen/sx_dp10"
                android:layout_marginTop="@dimen/sx_dp10"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/image_iv"
                    android:layout_width="@dimen/sx_dp50"
                    android:layout_height="@dimen/sx_dp50"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_head" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sx_dp10"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/sx_dp5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:lines="1"
                            android:textColor="@color/title_text"
                            android:textSize="@dimen/sx_sp15"
                            tools:text="中山驿站" />

                        <TextView
                            android:id="@+id/code_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="bottom|right"
                            android:lines="1"
                            android:textColor="@color/focus_red_text"
                            android:textSize="@dimen/sx_sp12"
                            tools:text="编码：0023" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/nums_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:lines="1"
                        android:textColor="@color/content_text"
                        android:textSize="@dimen/sx_sp12"
                        tools:text="肖南方" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/sx_dp1"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:layout_marginLeft="@dimen/sx_dp10"
                android:layout_marginRight="@dimen/sx_dp10"
                android:background="@color/color_eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:layout_marginLeft="@dimen/sx_dp10"
                android:layout_marginRight="@dimen/sx_dp10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardnum_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/title_text"
                    android:textSize="@dimen/sx_sp12"
                    tools:text="电子卡数量：159" />

                <TextView
                    android:id="@+id/allocation_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_maincolor_rect_border"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="bottom|right"
                    android:paddingBottom="@dimen/sx_dp10"
                    android:paddingLeft="@dimen/sx_dp8"
                    android:paddingRight="@dimen/sx_dp8"
                    android:paddingTop="@dimen/sx_dp10"
                    android:text="分配代言卡"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/sx_sp12" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>