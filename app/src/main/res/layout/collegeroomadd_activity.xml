<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <include layout="@layout/toolbar_layout" />


    <View style="@style/line_style" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/sx_dp10"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sx_dp1"
            android:orientation="vertical">

            <TextView
                style="@style/form_text_title_style"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:layout_marginRight="0dp"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/sx_dp10"
                android:paddingTop="@dimen/sx_dp10"
                android:text="堂主信息"
                android:textColor="@color/title_text"
                android:textSize="@dimen/sx_sp16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/sx_dp5"
                android:paddingLeft="@dimen/sx_dp10"
                android:paddingRight="@dimen/sx_dp10"
                android:paddingTop="@dimen/sx_dp5">


                <ImageView
                    android:id="@+id/user_image_iv"
                    android:layout_width="@dimen/sx_dp40"
                    android:layout_height="@dimen/sx_dp40"
                    android:layout_marginRight="@dimen/sx_dp25"
                    android:src="@drawable/default_head" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/username_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:lines="1"
                        android:textColor="@color/title_text"
                        android:textSize="@dimen/sx_sp14"
                        tools:text="中山驿站" />

                    <TextView
                        android:id="@+id/identity_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:lines="1"
                        android:textColor="@color/title_text"
                        android:textSize="@dimen/sx_sp12"
                        tools:text="肖南方" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_text_title_style"
                    android:text="导师类型" />

                <TextView
                    android:id="@+id/type_tv"
                    style="@style/form_text_content_left_style"
                    tools:text="11111111111" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_text_title_style"
                    android:gravity="top"
                    android:text="个人头衔" />

                <TextView
                    android:id="@+id/senior_title_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sx_dp95"
                    android:gravity="top"
                    android:lines="5"
                    tools:text="111ssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss11" />
            </LinearLayout>

            <TextView
                style="@style/form_text_title_style"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:layout_marginRight="0dp"
                android:layout_marginTop="@dimen/sx_dp9"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/sx_dp10"
                android:paddingTop="@dimen/sx_dp10"
                android:text="私塾信息"
                android:textColor="@color/title_text"
                android:textSize="@dimen/sx_sp16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collegeroom_image_title_tv"
                    style="@style/form_text_title_style"
                    android:text="*私塾头像" />

                <ImageView
                    android:id="@+id/collegeroom_image_iv"
                    android:layout_width="@dimen/sx_dp60"
                    android:layout_height="@dimen/sx_dp60"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="@dimen/sx_dp10"
                    android:layout_marginTop="@dimen/sx_dp10" />

                <TextView
                    style="@style/form_text_title_style"
                    android:gravity="center"
                    android:textSize="@dimen/sx_sp12"
                    android:text="默认使用导师头像，可编辑"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/chooseimg_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/sx_dp10"
                    android:paddingRight="@dimen/sx_dp10">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/sx_dp25"
                        android:layout_height="@dimen/sx_dp20"
                        android:tint="@android:color/black"
                        app:srcCompat="@drawable/ic_icon_chooseimg" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_title_tv"
                    style="@style/form_text_title_style"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="*私塾名称" />

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/form_text_content_left_style"
                    android:hint="例如：小师妹" />

                <TextView
                    android:id="@+id/name_suffix_tv"
                    android:layout_width="wrap_content"
                    style="@style/form_text_content_left_style"
                    android:text="私塾" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/city_title_tv"
                    style="@style/form_text_title_style"
                    android:text="*所在城市" />

                <EditText
                    android:id="@+id/city_et"
                    style="@style/form_text_content_left_style"
                    android:hint="例如：北京市" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collegeroom_intro_title_tv"
                    style="@style/form_text_title_style"
                    android:gravity="top"
                    android:text="*私塾介绍" />

                <EditText
                    android:id="@+id/collegeroom_intro_et"
                    style="@style/form_text_content_left_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sx_dp95"
                    android:gravity="top"
                    android:hint="例如：欢迎来到我的私塾"
                    android:lines="5" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sx_dp9"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_text_title_style"
                    android:text="&#8194;VIP&#8197;价&#8197;格" />

                <TextView
                    style="@style/form_text_title_style"
                    android:textColor="@color/title_text"
                    android:layout_margin="0dp"
                    android:text="￥" />

                <EditText
                    android:id="@+id/price_et"
                    style="@style/form_text_content_left_style"
                    android:inputType="numberDecimal"
                    android:hint="例如：100" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_text_title_style"
                    android:gravity="top"
                    android:text="&#8194;VIP&#8197;介&#8197;绍" />

                <EditText
                    android:id="@+id/vip_intro_et"
                    style="@style/form_text_content_left_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sx_dp95"
                    android:gravity="top"
                    android:hint="例如：欢迎来到我的私塾"
                    android:lines="5" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/action_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sx_dp50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pre_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_red_selector"
            android:gravity="center"
            android:text="上一步"
            android:textColor="@color/white"
            android:textSize="@dimen/sx_sp14" />

        <TextView
            android:id="@+id/sub_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_green_selector"
            android:gravity="center"
            android:text="立即开通"
            android:textColor="@color/white"
            android:textSize="@dimen/sx_sp14" />
    </LinearLayout>

</android.support.v7.widget.FitWindowsLinearLayout>