<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sx_dp1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sx_dp1"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/sx_dp10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="@dimen/sx_dp10"
                android:text="课程标题"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_dp16" />


            <TextView
                android:id="@+id/coursetitle_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sx_dp15" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sx_dp1"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/sx_dp10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="@dimen/sx_dp10"
                android:text="播放地址"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_dp16" />


            <TextView
                android:id="@+id/courseaddress_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sx_dp15" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sx_dp1"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/sx_dp10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="@dimen/sx_dp10"
                android:text="开始时间"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_dp16" />


            <TextView
                android:id="@+id/coursestarttime_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sx_dp15" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sx_dp1"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/sx_dp10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="@dimen/sx_dp10"
                android:text="提醒时间"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_dp16" />


            <TextView
                android:id="@+id/courseremind_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sx_dp15" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sx_dp1"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/sx_dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/sx_dp10"
                android:ellipsize="end"
                android:gravity="top"
                android:lines="1"
                android:text="文本内容"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_dp16" />

            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sx_dp100"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sx_dp15" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.FitWindowsLinearLayout>