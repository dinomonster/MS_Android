<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sx_dp345"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rect_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sx_dp40"
        android:layout_marginRight="@dimen/sx_dp40"
        android:layout_marginTop="@dimen/sx_dp20"
        android:gravity="center"
        android:text="电子代言卡"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sx_sp14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp30"
        android:layout_marginTop="@dimen/sx_dp30"
        android:layout_marginLeft="@dimen/sx_dp15"
        android:layout_marginRight="@dimen/sx_dp15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/sx_dp10"
            android:text="数量"
            android:textColor="@color/title_text"
            android:textSize="@dimen/sx_sp12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bg"
            android:paddingTop="@dimen/sx_dp15"
            android:paddingBottom="@dimen/sx_dp15"
            android:paddingLeft="@dimen/sx_dp10"
            android:paddingRight="@dimen/sx_dp10"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/num_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="例如：100"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_sp14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="张"
                android:textColor="@color/content_text"
                android:textSize="@dimen/sx_sp14" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sx_dp43"
        android:gravity="center"
        android:orientation="horizontal">

        <!--拍照-->
        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sx_sp14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/sx_dp16"
            android:layout_marginTop="@dimen/sx_dp16"
            android:background="@color/line" />
        <!--从相册中选取-->
        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认分配"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sx_sp14" />

    </LinearLayout>
</LinearLayout>