<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/sx_dp5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/sx_dp5">

        <TextView
            android:layout_width="@dimen/sx_dp10"
            android:layout_height="@dimen/sx_dp30"
            android:background="@color/main_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/sx_dp8"
            android:text="直播信息"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sx_sp18" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sx_dp150"
        android:layout_marginTop="@dimen/sx_dp1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/cover_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/cover_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sx_dp150"
                android:scaleType="fitXY"
                android:src="@drawable/default_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/color_1a000000"
                android:gravity="center"
                android:text="封面图"
                android:textColor="@color/main_light" />
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/sx_dp1"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/coverbig_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/coverbig_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sx_dp150"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/default_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/color_1a000000"
                android:gravity="center"
                android:text="封面大图"
                android:textColor="@color/main_light" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:layout_marginTop="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="直播标题"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <EditText
            android:id="@+id/title_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请%s主体名称"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="开始时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <LinearLayout
            android:id="@+id/starttime_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/starttime_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请选择"
                android:lines="1"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sx_dp15" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/starttime_arrow"
                android:layout_width="@dimen/sx_dp18"
                android:layout_height="@dimen/sx_dp18"
                android:tint="@android:color/black"
                app:srcCompat="@drawable/icon_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="top"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="直播描述"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <EditText
            android:id="@+id/themeName_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sx_dp100"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="请%s直播描述"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="直播状态"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <LinearLayout
            android:id="@+id/status_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请选择"
                android:lines="1"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sx_dp15" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/status_arrow"
                android:layout_width="@dimen/sx_dp18"
                android:layout_height="@dimen/sx_dp18"
                android:tint="@android:color/black"
                app:srcCompat="@drawable/icon_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="直播地址"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <EditText
            android:id="@+id/url_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请%s直播地址"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="观看人数"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <EditText
            android:id="@+id/watchnum_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请%s观看人数"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="预约人数"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <EditText
            android:id="@+id/ordercount_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请%s预约人数"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liveguest_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:layout_marginTop="@dimen/sx_dp10"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/sx_dp5">

        <TextView
            android:layout_width="@dimen/sx_dp10"
            android:layout_height="@dimen/sx_dp30"
            android:background="@color/main_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/sx_dp8"
            android:text="直播嘉宾"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sx_sp18" />
    </LinearLayout>
</LinearLayout>
