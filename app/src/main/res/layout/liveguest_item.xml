<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sx_dp8"
            android:layout_marginLeft="@dimen/sx_dp8"
            android:layout_marginTop="@dimen/sx_dp8"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/sx_dp75"
                android:layout_height="@dimen/sx_dp75"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:src="@drawable/default_head" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/sx_dp75"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_image"
                android:gravity="center"
                android:minWidth="@dimen/sx_dp35"
                android:text="黄明华"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/sx_sp11" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/sx_dp8"
            android:layout_marginLeft="@dimen/sx_dp2"
            android:layout_marginTop="@dimen/sx_dp8"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/title_text"
                android:textSize="@dimen/sx_sp18"
                android:text="分享主题" />


            <TextView
                android:id="@+id/tv_compnay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/sx_dp8"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:lines="1"
                android:text="公司名称"
                android:textColor="@color/content_text"
                android:textSize="@dimen/sx_sp15"/>
            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/sx_dp8"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:lines="1"
                android:text="嘉宾头衔"
                android:textColor="@color/content_text"
                android:textSize="@dimen/sx_sp15"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/sx_dp8"
            app:srcCompat="@drawable/ic_more" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/sx_dp15"
        android:layout_marginRight="@dimen/sx_dp15"
        android:background="@color/line" />

</LinearLayout>
