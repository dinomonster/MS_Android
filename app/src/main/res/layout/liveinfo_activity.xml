<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <include layout="@layout/toolbar_layout" />


    <View style="@style/line_style" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/sx_dp10"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sx_dp1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/sx_dp12"
                android:paddingLeft="@dimen/sx_dp10"
                android:paddingTop="@dimen/sx_dp13"
                android:textColor="@color/title_text"
                android:textSize="@dimen/sx_sp16"
                tools:text="主题：连锁经营的跨时代变迁" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/book_title_tv"
                    style="@style/form_text_title_style"
                    android:text="*预约人数基数" />

                <EditText
                    android:id="@+id/book_et"
                    style="@style/form_text_content_left_style"
                    android:layout_weight="1"
                    android:inputType="number" />

                <TextView
                    style="@style/form_text_content_left_style"
                    android:layout_width="wrap_content"
                    android:padding="0dp"
                    android:text="人" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_text_title_style"
                    android:text="实际预约人数&#8194;" />

                <TextView
                    android:id="@+id/actualbook_tv"
                    style="@style/form_text_content_left_style"
                    android:inputType="number"
                    android:paddingLeft="0dp"
                    tools:text="99人" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/watch_title_tv"
                    style="@style/form_text_title_style"
                    android:text="*观看人数基数" />

                <EditText
                    android:id="@+id/watch_et"
                    style="@style/form_text_content_left_style"
                    android:layout_weight="1"
                    android:inputType="number" />

                <TextView
                    style="@style/form_text_content_left_style"
                    android:layout_width="wrap_content"
                    android:padding="0dp"
                    android:text="人" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_text_title_style"
                    android:text="实际观看人数&#8194;" />

                <TextView
                    android:id="@+id/actualwatch_tv"
                    style="@style/form_text_content_left_style"
                    android:inputType="number"
                    android:paddingLeft="0dp"
                    tools:text="99人" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sx_dp95"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_text_title_style"
                    android:gravity="top"
                    android:text="提醒信息&#12288;&#12288;&#8194;" />


                <EditText
                    android:id="@+id/tip_et"
                    style="@style/form_text_content_left_style"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:lines="100"
                    android:text="欢迎来到聊天室！" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sx_dp95"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_text_title_style"
                    android:gravity="top"
                    android:text="推流地址&#12288;&#12288;&#8194;" />


                <TextView
                    android:id="@+id/push_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:lines="100"
                    tools:text="欢迎来到聊天室！ssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss" />

                <TextView
                    android:id="@+id/copy_push_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="top"
                    android:paddingRight="@dimen/sx_dp10"
                    android:text="复制"
                    android:textColor="@color/main_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sx_dp95"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_text_title_style"
                    android:gravity="top"
                    android:text="观看地址&#12288;&#12288;&#8194;" />


                <TextView
                    android:id="@+id/watch_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:lines="100"
                    tools:text="欢迎来到聊天室！ssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss" />

                <TextView
                    android:id="@+id/copy_watch_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="top"
                    android:paddingRight="@dimen/sx_dp10"
                    android:text="复制"
                    android:textColor="@color/main_color" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:paddingBottom="@dimen/sx_dp12"
                    android:paddingLeft="@dimen/sx_dp10"
                    android:paddingTop="@dimen/sx_dp13"
                    android:text="直播辅导员"
                    android:textColor="@color/title_text"
                    android:textSize="@dimen/sx_sp16" />

                <TextView
                    android:id="@+id/add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingBottom="@dimen/sx_dp12"
                    android:paddingLeft="@dimen/sx_dp10"
                    android:paddingRight="@dimen/sx_dp10"
                    android:paddingTop="@dimen/sx_dp13"
                    android:text="添加"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/sx_sp14" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/action_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sx_dp50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/next_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_green_selector"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.FitWindowsLinearLayout>