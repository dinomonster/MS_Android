<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_selector"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/sx_dp8">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/sx_dp50"
                android:layout_height="@dimen/sx_dp50"
                android:layout_marginBottom="@dimen/sx_dp5"/>

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/title_text" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sx_dp1"
            android:background="@color/line" />
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/sx_dp1"
        android:layout_height="match_parent"
        android:background="@color/line" />

</LinearLayout>
