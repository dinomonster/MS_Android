<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <include layout="@layout/toolbar_layout" />


    <View style="@style/line_style" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/sx_dp10"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sx_dp1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_title_tv"
                    style="@style/form_text_title_style"
                    android:text="*活动名称" />

                <EditText
                    android:id="@+id/name_et"
                    style="@style/form_text_content_left_style"
                    android:hint="例如：解析优秀品牌营销案例"
                    android:textColor="@color/content_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/image_title_tv"
                    style="@style/form_text_title_style"
                    android:gravity="top"
                    android:text="*活&#8194;动&#8194;图" />

                <ImageView
                    android:id="@+id/image_iv"
                    android:layout_width="@dimen/sx_dp50"
                    android:layout_height="@dimen/sx_dp67"
                    android:layout_marginBottom="@dimen/sx_dp10"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/sx_dp10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/chooseimg_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:paddingLeft="@dimen/sx_dp10"
                    android:paddingRight="@dimen/sx_dp10"
                    android:paddingTop="@dimen/sx_dp20">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/sx_dp25"
                        android:layout_height="@dimen/sx_dp20"
                        android:tint="@android:color/black"
                        app:srcCompat="@drawable/ic_icon_chooseimg" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activitytype_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activitytype_title_tv"
                    style="@style/form_text_title_style"
                    android:layout_height="wrap_content"
                    android:text="*活动类型" />

                <TextView
                    android:id="@+id/activitytype_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/type_arrow"
                    android:layout_width="@dimen/sx_dp18"
                    android:layout_height="@dimen/sx_dp18"
                    android:tint="@android:color/black"
                    app:srcCompat="@drawable/icon_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/starttime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/starttime_title_tv"
                    style="@style/form_text_title_style"
                    android:layout_height="wrap_content"
                    android:text="*开始时间" />

                <TextView
                    android:id="@+id/starttime_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/sx_dp18"
                    android:layout_height="@dimen/sx_dp18"
                    android:tint="@android:color/black"
                    app:srcCompat="@drawable/icon_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/endtime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/endtime_title_tv"
                    style="@style/form_text_title_style"
                    android:layout_height="wrap_content"
                    android:text="*结束时间" />

                <TextView
                    android:id="@+id/endtime_tv"
                    style="@style/form_text_content_left_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/sx_dp18"
                    android:layout_height="@dimen/sx_dp18"
                    android:tint="@android:color/black"
                    app:srcCompat="@drawable/icon_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tip_title_tv"
                    style="@style/form_text_title_style"
                    android:gravity="top"
                    android:text="*温馨提示" />

                <EditText
                    android:id="@+id/tip_et"
                    style="@style/form_text_content_left_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sx_dp95"
                    android:gravity="top"
                    android:hint="例如：北京市"
                    android:lines="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/intro_title_tv"
                    style="@style/form_text_title_style"
                    android:gravity="top"
                    android:text="*活动介绍" />

                <EditText
                    android:id="@+id/intro_et"
                    style="@style/form_text_content_left_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sx_dp95"
                    android:gravity="top"
                    android:hint="例如：北京市"
                    android:lines="5" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/action_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sx_dp50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/next_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_green_selector"
            android:gravity="center"
            android:text="保存并创建活动流程"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.FitWindowsLinearLayout>