<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/month_tv"
        android:layout_width="@dimen/sx_dp50"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sx_dp15"
        android:gravity="center"
        android:text="1月"
        android:textColor="@color/main_color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.hr.ms.ms_android.widget.DottedLineView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sx_dp14"
            android:layout_marginTop="@dimen/sx_dp6"
            app:color="@color/main_color"
            app:isHaveArrow="false"/>

        <ImageView

            android:layout_width="@dimen/sx_dp20"
            android:layout_height="@dimen/sx_dp20"
            android:src="@mipmap/icon_date_node" />

        <com.hr.ms.ms_android.widget.DottedLineView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/sx_dp6"
            app:color="@color/main_color"
            app:isHaveArrow="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp10"
        android:background="@mipmap/flow_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/sx_dp10"
        android:paddingLeft="@dimen/sx_dp15"
        android:paddingRight="@dimen/sx_dp15"
        android:paddingTop="@dimen/sx_dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/sx_dp8"
                android:text="中山"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_dp15" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/sx_dp8"
                android:text="活动1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_dp15" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/sx_dp8"
                android:text="1月9日-10日"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_dp15" />

            <TextView
                android:id="@+id/pesons_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/sx_dp8"
                android:text="梁柏强，梁柏强，梁柏强，梁柏强，梁柏强，梁柏强，梁柏强，梁柏强"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_dp15" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
