<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hr.ms.ms_android.mvp.main.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sx_dp1"
        android:background="?android:listDivider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/sx_dp1"
            android:layout_height="match_parent"
            android:background="?android:listDivider"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/sx_dp1"/>
        <TextView
            android:layout_width="@dimen/sx_dp1"
            android:layout_height="match_parent"
            android:background="?android:listDivider"/>

    </LinearLayout>




</android.support.v7.widget.FitWindowsLinearLayout>
