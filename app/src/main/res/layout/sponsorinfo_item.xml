<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="@dimen/sx_dp120"
            android:layout_height="@dimen/sx_dp40"
            android:scaleType="fitXY"
            android:layout_marginBottom="@dimen/sx_dp10"
            android:layout_marginLeft="@dimen/sx_dp10"
            android:layout_marginTop="@dimen/sx_dp10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/sx_dp10"
            android:layout_marginLeft="@dimen/sx_dp10"
            android:layout_marginTop="@dimen/sx_dp10"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top"
                android:lines="1"
                android:textColor="@color/title_text"
                android:textSize="@dimen/sx_sp14"
                tools:text="09:30-10:00" />


            <TextView
                android:id="@+id/subtitle_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:lines="1"
                android:textColor="@color/title_text"
                android:textSize="@dimen/sx_sp12"
                tools:text="顺序1" />


        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/more_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/sx_dp10"
            android:paddingRight="@dimen/sx_dp10"
            app:srcCompat="@drawable/ic_more" />

    </LinearLayout>

</LinearLayout>

