<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/sx_dp10"
        android:paddingLeft="@dimen/sx_dp10"
        android:paddingRight="@dimen/sx_dp10"
        android:paddingTop="@dimen/sx_dp15">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/sx_dp55"
            android:layout_height="@dimen/sx_dp55"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_head" />

        <LinearLayout
            android:id="@+id/content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/sx_dp8">


            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp5"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="惠勇驿站"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_sp14" />

            <TextView
                android:id="@+id/code_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp5"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="2048"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sx_sp14" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/sx_dp15"
        android:layout_marginRight="@dimen/sx_dp15"
        android:background="@color/line" />
</LinearLayout>