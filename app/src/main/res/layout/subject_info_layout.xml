<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/sx_dp5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/sx_dp5">

        <TextView
            android:layout_width="@dimen/sx_dp10"
            android:layout_height="@dimen/sx_dp30"
            android:background="@color/main_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/sx_dp8"
            android:text="课题信息"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sx_sp18" />

        <TextView
            android:id="@+id/edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="编辑"
            android:textColor="@color/title_text"
            android:textSize="@dimen/sx_sp16" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cover_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sx_dp150"
            android:scaleType="fitXY"
            android:src="@drawable/default_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_1a000000"
            android:gravity="center"
            android:text="封面图"
            android:textColor="@color/main_light" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="课题名称"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="课题类型"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="音频"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="课题标签"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <TextView
            android:id="@+id/tag_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:lines="1"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="课题来源"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <TextView
            android:id="@+id/source_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="官方"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="课程数量"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <TextView
            android:id="@+id/coursenum_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:lines="1"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="开始时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <TextView
            android:id="@+id/starttime_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:lines="1"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="主讲师兄"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />


        <TextView
            android:id="@+id/teacher_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="课题价格"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/sx_dp10"
            android:text="播放次数"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <TextView
            android:id="@+id/playnum_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/sx_dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sx_dp10"
            android:ellipsize="end"
            android:gravity="top"
            android:lines="1"
            android:text="课题描述"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sx_dp16" />

        <TextView
            android:id="@+id/desc_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sx_dp100"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sx_dp15" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/liveguest_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sx_dp1"
        android:layout_marginTop="@dimen/sx_dp10"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/sx_dp5">

        <TextView
            android:layout_width="@dimen/sx_dp10"
            android:layout_height="@dimen/sx_dp30"
            android:background="@color/main_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/sx_dp8"
            android:text="课程列表"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sx_sp18" />

        <TextView
            android:id="@+id/addcourse_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="新增"
            android:textColor="@color/title_text"
            android:textSize="@dimen/sx_sp16" />
    </LinearLayout>

    <include layout="@layout/search_layout" />


    <com.yyydjk.library.DropDownMenu
        android:id="@+id/dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_color"
        android:visibility="gone"
        app:dddividerColor="@color/line"
        app:ddmenuBackgroundColor="@android:color/white"
        app:ddmenuSelectedIcon="@mipmap/arrow_up"
        app:ddmenuTextSize="13sp"
        app:ddmenuUnselectedIcon="@mipmap/arrow_down"
        app:ddtextSelectedColor="@color/main_color"
        app:ddtextUnselectedColor="@color/title_text"
        app:ddunderlineColor="@color/line" />
</LinearLayout>

