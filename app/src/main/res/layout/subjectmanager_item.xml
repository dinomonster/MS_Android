<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="@dimen/sx_dp8">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="@dimen/sx_dp5"
            app:cardElevation="@dimen/sx_dp2"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/covver_image"
                android:layout_width="@dimen/sx_dp130"
                android:layout_height="@dimen/sx_dp90"
                android:scaleType="centerCrop"
                android:src="@drawable/default_back" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sx_dp2"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="@dimen/sx_dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/themename_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="智慧供应链高峰论坛"
                    android:textColor="@color/title_text"
                    android:textSize="@dimen/sx_sp18" />

                <TextView
                    android:id="@+id/teacher_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="李兴浩"
                    android:textColor="@color/content_text"
                    android:textSize="@dimen/sx_sp15" />

                <TextView
                    android:id="@+id/source_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="音频"
                    android:textColor="@color/content_text"
                    android:textSize="@dimen/sx_sp15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/fee_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="¥0"
                        android:textColor="@color/focus_red_text"
                        android:textSize="@dimen/sx_sp15" />


                    <TextView
                        android:id="@+id/date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="2018-03-27"
                        android:textColor="@color/content_text"
                        android:textSize="@dimen/sx_sp15" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/sx_dp8"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_more" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/sx_dp15"
        android:layout_marginRight="@dimen/sx_dp15"
        android:background="@color/line" />

</LinearLayout>