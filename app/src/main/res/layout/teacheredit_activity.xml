<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <include layout="@layout/toolbar_layout"/>


    <View style="@style/line_style" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sx_dp5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:padding="@dimen/sx_dp5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/photo_iv"
                        android:layout_width="@dimen/sx_dp80"
                        android:layout_height="@dimen/sx_dp80"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/sx_dp10"
                        android:padding="@dimen/sx_dp10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="导师姓名"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sx_dp16" />

                    <EditText
                        android:id="@+id/name_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请%s导师姓名"
                        android:lines="1"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sx_dp15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/sx_dp10"
                        android:padding="@dimen/sx_dp10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="导师简介"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sx_dp16" />

                    <EditText
                        android:id="@+id/desc_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请%s导师简介"
                        android:lines="1"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sx_dp15" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/sx_dp10"
                        android:padding="@dimen/sx_dp10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="导师类型"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sx_dp16" />

                    <LinearLayout
                        android:id="@+id/type_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/type_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请选择"
                            android:lines="1"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/sx_dp15" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/type_arrow"
                            android:layout_width="@dimen/sx_dp18"
                            android:layout_height="@dimen/sx_dp18"
                            android:tint="@android:color/black"
                            app:srcCompat="@drawable/icon_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/sx_dp10"
                        android:padding="@dimen/sx_dp10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="研究领域"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sx_dp16" />

                    <LinearLayout
                        android:id="@+id/territory_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/territory_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请选择"
                            android:lines="1"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/sx_dp15" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/territory_arrow"
                            android:layout_width="@dimen/sx_dp18"
                            android:layout_height="@dimen/sx_dp18"
                            android:tint="@android:color/black"
                            app:srcCompat="@drawable/icon_arrow" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/sx_dp10"
                        android:padding="@dimen/sx_dp10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="联系方式"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sx_dp16" />

                    <EditText
                        android:id="@+id/mobile_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请%s联系方式"
                        android:lines="1"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sx_dp15" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/sx_dp10"
                        android:padding="@dimen/sx_dp10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="洽谈状态"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sx_dp16" />

                    <LinearLayout
                        android:id="@+id/talktype_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/talktype_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请选择"
                            android:lines="1"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/sx_dp15" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/talktype_arrow"
                            android:layout_width="@dimen/sx_dp18"
                            android:layout_height="@dimen/sx_dp18"
                            android:tint="@android:color/black"
                            app:srcCompat="@drawable/icon_arrow" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/sx_dp10"
                        android:padding="@dimen/sx_dp10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="出场费用"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sx_dp16" />

                    <EditText
                        android:id="@+id/fee_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请%s出场费用"
                        android:lines="1"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sx_dp15" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/sx_dp10"
                        android:padding="@dimen/sx_dp10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="洽谈日期"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sx_dp16" />

                    <LinearLayout
                        android:id="@+id/date_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请选择"
                            android:lines="1"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/sx_dp15" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/date_arrow"
                            android:layout_width="@dimen/sx_dp18"
                            android:layout_height="@dimen/sx_dp18"
                            android:tint="@android:color/black"
                            app:srcCompat="@drawable/icon_arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_brown_selector"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="14sp" />
    </LinearLayout>

</android.support.v7.widget.FitWindowsLinearLayout>