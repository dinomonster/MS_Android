<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginLeft="@dimen/sx_dp10"
    android:layout_marginRight="@dimen/sx_dp10"
    android:layout_marginTop="@dimen/sx_dp10"
    app:cardCornerRadius="@dimen/sx_dp5"
    app:cardElevation="@dimen/sx_dp4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp15"
                android:layout_marginLeft="@dimen/sx_dp10"
                android:layout_marginRight="@dimen/sx_dp10"
                android:layout_marginTop="@dimen/sx_dp15"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:lines="1"
                    android:textColor="@color/title_text"
                    android:textSize="@dimen/sx_sp16"
                    tools:text="肖南方" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:gravity="bottom|right"
                    android:lines="1"
                    android:textColor="@color/focus_red_text"
                    android:textSize="@dimen/sx_sp14"
                    tools:text="微信平台处理中" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp12"
                android:layout_marginLeft="@dimen/sx_dp11"
                android:layout_marginRight="@dimen/sx_dp11"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:lines="1"
                    android:textColor="@color/title_text"
                    android:textSize="@dimen/sx_sp12"
                    tools:text="肖南方" />

                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sx_dp3"
                    android:layout_weight="0.5"
                    android:gravity="bottom|right"
                    android:textColor="@color/title_text"
                    android:textSize="@dimen/sx_sp14"
                    tools:text="¥10000" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/sx_dp1"
                android:layout_marginBottom="@dimen/sx_dp10"
                android:layout_marginLeft="@dimen/sx_dp10"
                android:layout_marginRight="@dimen/sx_dp10"
                android:background="@color/color_eeeeee" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp12"
                android:layout_marginLeft="@dimen/sx_dp11"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/content_text"
                android:textSize="@dimen/sx_sp12"
                tools:text="2017-11-24 20:41" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>