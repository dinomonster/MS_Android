<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <View style="@style/line_style" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/sx_dp10"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sx_dp1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/sx_dp12"
                android:paddingLeft="@dimen/sx_dp10"
                android:paddingTop="@dimen/sx_dp13"
                android:text="申请明细"
                android:textColor="@color/title_text"
                android:textSize="@dimen/sx_sp16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sx_dp1"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_text_title_style"
                    android:text="申&#8197;请&#8197;金&#8197;额&#8197;" />

                <TextView
                    android:id="@+id/applyamount_tv"
                    style="@style/form_text_content_right_style"
                    tools:text="11111111111" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/form_text_title_style"
                        android:text="用&#8197;户&#8197;姓&#8197;名&#8197;" />

                    <TextView
                        android:id="@+id/name_tv"
                        style="@style/form_text_content_right_style"
                        tools:text="ssssss" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/form_text_title_style"
                        android:text="应到账金额" />

                    <TextView
                        android:id="@+id/payableamount_tv"
                        style="@style/form_text_content_right_style" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/form_text_title_style"
                        android:text="手&#12288;续&#12288;费" />

                    <TextView
                        android:id="@+id/poundageAmount_tv"
                        style="@style/form_text_content_right_style" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/form_text_title_style"
                        android:text="提&#12288;现&#12288;至 " />

                    <TextView
                        android:id="@+id/mode_tv"
                        style="@style/form_text_content_right_style" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/form_text_title_style"
                        android:text="申&#8197;请&#8197;时&#8197;间&#8197;" />

                    <TextView
                        android:id="@+id/applytime_tv"
                        style="@style/form_text_content_right_style" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp1"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/form_text_title_style"
                        android:text="订&#12288;单&#12288;号" />

                    <TextView
                        android:id="@+id/orderNo_tv"
                        style="@style/form_text_content_right_style" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sx_dp10"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/form_text_title_style"
                        android:text="当&#8197;前&#8197;状&#8197;态&#8197;" />

                    <TextView
                        android:id="@+id/checkStatus_tv"
                        style="@style/form_text_content_right_style"
                        android:textColor="@color/focus_red_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bankcard_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/bankcard_title_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sx_dp1"
                        android:background="@android:color/white"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/sx_dp12"
                            android:paddingLeft="@dimen/sx_dp10"
                            android:paddingTop="@dimen/sx_dp13"
                            android:text="银行卡信息"
                            android:textColor="@color/title_text"
                            android:textSize="@dimen/sx_sp16" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/bankcard_arrow"
                            android:layout_width="@dimen/sx_dp18"
                            android:layout_height="@dimen/sx_dp18"
                            android:tint="@android:color/black"
                            app:srcCompat="@drawable/arrow_up_selector" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bankcard_content_ll"
                        android:layout_marginBottom="@dimen/sx_dp10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:text="开&#12288;户&#12288;名" />

                            <TextView
                                android:id="@+id/accountName_tv"
                                style="@style/form_text_content_left_style" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:text="银&#8197;行&#8197;卡&#8197;号&#8197;" />

                            <TextView
                                android:id="@+id/bankCard_tv"
                                style="@style/form_text_content_left_style"
                                tools:text="11111" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:text="银&#8197;行&#8197;名&#8197;称&#8197;" />

                            <TextView
                                android:id="@+id/bankName_tv"
                                style="@style/form_text_content_left_style"
                                tools:text="11111" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:text="身&#8197;份&#8197;证&#8197;号&#8197;" />

                            <TextView
                                android:id="@+id/identityCard_tv"
                                style="@style/form_text_content_left_style"
                                tools:text="11111" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:text="手&#12288;机&#12288;号" />

                            <TextView
                                android:id="@+id/mobile_tv"
                                style="@style/form_text_content_left_style"
                                tools:text="11111" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/check_title_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sx_dp1"
                        android:background="@android:color/white"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/sx_dp12"
                            android:paddingLeft="@dimen/sx_dp10"
                            android:paddingTop="@dimen/sx_dp13"
                            android:text="审核信息"
                            android:textColor="@color/title_text"
                            android:textSize="@dimen/sx_sp16" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/check_arrow"
                            android:layout_width="@dimen/sx_dp18"
                            android:layout_height="@dimen/sx_dp18"
                            android:tint="@android:color/black"
                            app:srcCompat="@drawable/arrow_up_selector" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/check_content_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sx_dp10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:text="审&#8197;核&#8197;金&#8197;额&#8197;" />

                            <TextView
                                android:id="@+id/checkAmount_tv"
                                style="@style/form_text_content_left_style"
                                android:layout_width="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:text="审&#12288;核&#12288;人" />

                            <TextView
                                android:id="@+id/checkUser_tv"
                                style="@style/form_text_content_left_style"
                                android:layout_width="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:gravity="top"
                                android:text="拒&#8197;绝&#8197;原&#8197;因&#8197;" />

                            <TextView
                                android:id="@+id/refuseReason_tv"
                                style="@style/form_text_content_left_style"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/sx_dp75"
                                android:gravity="top"
                                android:lines="5"
                                tools:text="111sssssssssssssssssssssssssssssssssssssss11" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wechat_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/wechat_title_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layout_marginBottom="@dimen/sx_dp1"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/sx_dp12"
                            android:paddingLeft="@dimen/sx_dp10"
                            android:paddingTop="@dimen/sx_dp13"
                            android:text="微信付款明细信息"
                            android:textColor="@color/title_text"
                            android:textSize="@dimen/sx_sp16" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/wechat_arrow"
                            android:layout_width="@dimen/sx_dp18"
                            android:layout_height="@dimen/sx_dp18"
                            android:tint="@android:color/black"
                            app:srcCompat="@drawable/arrow_up_selector" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wechat_content_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sx_dp10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:text="付&#8197;款&#8197;状&#8197;态&#8197;" />

                            <TextView
                                android:id="@+id/handlestatus_tv"
                                style="@style/form_text_content_left_style" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:text="处&#8197;理&#8197;时&#8197;间&#8197;" />

                            <TextView
                                android:id="@+id/handltime_tv"
                                style="@style/form_text_content_left_style"
                                tools:text="11111" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sx_dp1"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_text_title_style"
                                android:gravity="top"
                                android:text="拒&#8197;绝&#8197;原&#8197;因&#8197;" />

                            <TextView
                                android:id="@+id/wechatrefusereason_tv"
                                style="@style/form_text_content_left_style"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/sx_dp75"
                                android:gravity="top"
                                android:lines="5"
                                tools:text="11111" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.v7.widget.FitWindowsLinearLayout>