<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:duration="500"
        android:fromDegrees="0"
        android:pivotX="100%"
        android:pivotY="100%"
        android:repeatCount="1"
        android:toDegrees="-60">
    </rotate>
    <alpha
        android:duration="500"
        android:fromAlpha="1"
        android:toAlpha="0">
    </alpha>
</set>